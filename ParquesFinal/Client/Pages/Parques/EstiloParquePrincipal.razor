
<div style="margin-right: 1%; margin-bottom: 10px; text-align: center">
    <a href="@urlParque">
        <img src="@Parque.Img" alt="fotaza" style="width:20rem; height:300px;" />
    </a>
    <p style=" text-align:center; max-width:225px;height:44px;font-size:15px;font-weight:bold;">Parque: @Parque.Nombre</p>


    <AuthorizeView>
        <Authorized>
            <div>
                <a class="btn btn-success" href="parque/editar">Editar</a>
                <button class="btn btn-danger"> Deshabilitar</button>
            </div>
        </Authorized>
    </AuthorizeView>
</div>
@code {

    [Parameter] public Parque Parque { get; set; }
    [Parameter] public bool MostrarBotones { get; set;}
    [Parameter] public EventCallback<Parque> DeshabilitarParque { get; set; }
    private string urlParque = string.Empty;

    protected override void OnInitialized()
    {
        urlParque = $"/parque/{Parque?.Id}/{Parque?.Nombre?.Replace(" ", "-")}";
    }

}
