<div style="margin-right: 2%; margin-bottom: 10px; text-align: center;">
    <a>
        <img src="@Personal.Img" alt="Imagen" style="width: 225px; height:300px;"/>
    </a>
    <p style="max-width: 225px; height: 44px; font-size: 15px; font-weight: bold;">@Personal.Nombre</p>
    <div>
        <a class="btn btn-info">Editar</a>
        <button type="button" class="btn btn-danger" @onclick="@(() => EliminarEmpleado.InvokeAsync(Personal))">Borrar </button>
    </div>
</div>

  <div>
    @if (MostrarBotones)
    {
        <div>
            <button @onclick="@(() => EliminarEmpleado.InvokeAsync(Personal))">Borrar</button>
        </div>
    }

</div>

@code {

    [Parameter] public Personal Personal { get; set; }
    [Parameter] public bool MostrarBotones { get; set; } = false;
    [Parameter] public EventCallback<Personal> EliminarEmpleado { get; set; }

}

