@if (MostrarConfirmacion)
{
 <div class="modal-backdrop show"></div>

<div class="modal fade show" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="display:block;">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Nombre</h5>
                <button @onclick="onCancel" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @ChildContent
            </div>
            <div class="modal-footer">
                <button @onclick="onConfirm" type="button" class="btn btn-primary">Save changes</button>
                <button @onclick="onCancel"type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
                </div>
        </div>
</div>
}

@code{
    private bool MostrarConfirmacion = false;
    [Parameter] public string Nombre { get; set; } = "Confirmación";
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public EventCallback onConfirm { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }
    public void Mostar() => MostrarConfirmacion = true;
    public void Ocultar() => MostrarConfirmacion = false;
    }